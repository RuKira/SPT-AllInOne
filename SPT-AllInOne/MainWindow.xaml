<Window x:Class="SPT_AllInOne.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SPT_AllInOne"
        mc:Ignorable="d"
        Title="SPT-AllInOne" Height="1000" Width="1400" Background="Gray" ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Menu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Width="Auto" Height="20" Background="#FFA9D1F4" DockPanel.Dock="Top">
            <MenuItem Height="Auto" Width="Auto" Header="Reference"/>           <!-- TODO: This should link to anything related to making quest, ID Searching, Quest Formatting, or Documentation on how this application works -->
            <MenuItem Height="Auto" Width="Auto" Header="Start Server"/>        <!-- TODO: This should simply run the Aki.Server.exe in the Server Folder | Export to Server Console-->
            <MenuItem Height="Auto" Width="Auto" Header="Stop Server"/>         <!-- TODO: This should stop the Aki.Server Service (Need Exact name) -->
            <MenuItem Height="Auto" Width="Auto" Header="Options"/>             <!-- TODO: This should allow you to setup locations, Server, Main Folder, etc -->
            <MenuItem Height="Auto" Width="Auto" Header="Tools"></MenuItem>     <!-- TODO: This will be dead for a bit, but will be used for the Trader Creation, and other things not related to this MainWindow -->
        </Menu>
        <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left">
            <StackPanel x:Name="QuestFilePanel" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Button Margin="3" Height="24" Width="112" Background="DarkGray">New Quest File</Button>
                <Button Margin="3" Height="24" Width="112" Background="DarkGray">Load Quest File</Button>
                <Button Margin="3" Height="24" Width="112" Background="DarkGray">Save Quest File</Button>
            </StackPanel>
            <StackPanel x:Name="TextBlockPanel" HorizontalAlignment="Left" VerticalAlignment="Top">
                <TextBlock Background="White" Width="347" Height="20" Foreground="LightGray">Loaded File Path</TextBlock>
                <TextBlock Background="White" Width="347" Height="20" Margin="3" Foreground="LightGray">Loaded Locale Path</TextBlock>
            </StackPanel>
            <StackPanel x:Name="QuestPanel" HorizontalAlignment="Left" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal">
                    <Button Margin="3" Height="24" Width="112" Background="DarkGray">New Quest</Button>
                    <Label Margin="24, 3" Height="24" Width="70">Quest List</Label>
                    <Button Margin="3" Height="24" Width="112" Background="DarkGray">Save Quest</Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Margin="3" Height="24" Width="112" Background="DarkGray">Edit Quest</Button>
                    <Button Margin="3" Height="24" Width="112" Background="DarkGray">Duplicate Quest</Button>
                    <Button Margin="3" Height="24" Width="112" Background="DarkGray">Remove Quest</Button>
                </StackPanel>
                <StackPanel>
                    <TextBlock Margin="0, 2" Width="347" Height="24" Foreground="LightGray" Background="White">Current Quest</TextBlock>
                    <ListBox Width="347" Height="200">Quest List</ListBox>
                    <Button Width="347" Height="24" Background="DarkGray">Clear Console</Button>
                    <TextBlock Height="320" Width="348" Background="White" Margin="3">Quest Error Console</TextBlock>
                    <TextBlock Height="230" Width="348" Background="White">Server Console</TextBlock>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="3, 4">
            <StackPanel Orientation="Horizontal">
                <TextBox Width="272" Height="20" Background="White" Margin="5, 0" Foreground="LightGray">_id</TextBox>
                <CheckBox Margin="5, 0" Width="240" IsChecked="True">Can Show Notification</CheckBox>
                <CheckBox Margin="5, 0" Width="120">Requires Key</CheckBox>
                <ComboBox Width="71" Height="20" Background="DarkGray" Margin="5, 0">Trader</ComboBox>
                <TextBox Width="272" Height="20" Background="White" Margin="5, 0" Foreground="LightGray">Trader Id Override</TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0, 4">
                <TextBox Width="272" Height="20" Background="White" Margin="5, 0" Foreground="LightGray">Quest Name</TextBox>
                <CheckBox Margin="5, 0" Width="240">Dynamic Locale</CheckBox>
                <CheckBox Margin="5, 0" Width="120">Secret Quest</CheckBox>
                <ComboBox Width="71" Height="20" Background="DarkGray" Margin="5, 0">Location</ComboBox>
                <TextBox Width="272" Height="20" Background="White" Margin="5, 0" Foreground="LightGray">Location Id Override</TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox Width="272" Height="20" Background="White" Margin="5, 0" Foreground="Red">Placeholder.png</TextBox>
                <CheckBox Margin="5, 0" Width="240">Restartable</CheckBox>
                <CheckBox Margin="5, 0" Width="120">Instant Complete</CheckBox>
                <ComboBox Width="71" Height="20" Background="DarkGray" Margin="5, 0">Side</ComboBox>
                <ComboBox Width="272" Height="20" Background="DarkGray" Margin="5, 0">Type</ComboBox>
            </StackPanel>
            <StackPanel Height="830" Margin="4">
                <TabControl Height="830" Background="White"> <!-- TODO: This Tab Panel is not working, or is used incorrectly, research into an actual Tab Panel -->
                    <TabItem Height="20" Width="140" Background="DarkGray" BorderBrush="Gray" Header="Locales">                 <!-- TODO: This will house all Locale Data -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Row="0" Grid.Column="0" Margin="3" Foreground="LightGray" Text="Description (Same as Start and Accept Message)"/>
                            <TextBox Grid.Row="1" Grid.Column="0" Margin="3" Foreground="LightGray" Text="Fail Message"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Margin="3" Foreground="LightGray" Text="Success Message (Same as Complete Message"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Margin="3" Foreground="LightGray" Text="Change Message"/>
                            <TextBox Grid.Row="2" Grid.Column="0" Margin="3" Foreground="LightGray" Text="Note"/>
                        </Grid>
                    </TabItem>
                    <TabItem Height="20" Width="122" Background="DarkGray" BorderBrush="Gray" Header="Available For Start"/>    <!-- TODO: This will house all Quest Start Data -->
                    <TabItem Height="20" Width="122" Background="DarkGray" BorderBrush="Gray" Header="Kills Editor"/>           <!-- TODO: This will house all Kill Requirement Data (Unique) -->
                    <TabItem Height="20" Width="122" Background="DarkGray" BorderBrush="Gray" Header="Available For Finish"/>   <!-- TODO: This will house all Quest Finish Data -->
                    <TabItem Height="20" Width="122" Background="DarkGray" BorderBrush="Gray" Header="Fail"/>                   <!-- TODO: This will house all quest Fail Data  -->
                    <TabItem Height="20" Width="122" Background="DarkGray" BorderBrush="Gray" Header="Rewards"/>                <!-- TODO: This will house all Rewards Data -->
                    <TabItem Height="20" Width="122" Background="DarkGray" BorderBrush="Gray" Header="Gunsmith"/>               <!-- TODO: This will house all Gunsmith Data (Unique)  -->
                    <TabItem Height="20" Width="122" Background="DarkGray" BorderBrush="Gray" Header="Saves"/>                  <!-- TODO: This will house all Pre-made Gunsmith Presets (Unique)  -->
                </TabControl>
                </StackPanel>
            </StackPanel>
        <!-- Bottom Grid -->
        <Menu Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Width="Auto" Height="28" Background="#FFA9D1F4" DockPanel.Dock="Bottom">
            <Label Height="Auto" Width="Auto">https://github.com/RuKira/SPT-AllInOne</Label>
            <Label Height="Auto" Width="Auto" Margin="350, 0">ALPHA VERSION 0.0.1: REPORT ALL BUGS</Label>
            <Label Height="Auto" Width="Auto">SPECIAL THANKS TO DIRTBIKERCJ</Label>
        </Menu>
    </Grid>
</Window>
